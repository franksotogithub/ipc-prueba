{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    //"baseUrl":"scr",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
     
    ],

    "paths": {
      "@app/*":["app/*"],
      "@env/*": ["environments/*"],
      "@shared/*": ["app/shared/*"],
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
